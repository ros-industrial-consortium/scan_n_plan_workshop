<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="motoman_mh180_120" params="prefix">
    <!-- link list -->
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/visual/base_link.stl"/>
        </geometry>
        <material name="blue">
          <color rgba="0 0 1 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/collision/base_link.stl"/>
        </geometry>
        <material name="yellow">
          <color rgba="0 1 1 1"/>
        </material>
      </collision>
    </link>
    <link name="${prefix}link_s">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/visual/link_s.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/collision/link_s.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_l">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/visual/link_l.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/collision/link_l.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_u">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/visual/link_u.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/collision/link_u.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_r">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/visual/link_r.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/collision/link_r.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_b">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/visual/link_b.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/collision/link_b.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_t">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/visual/link_t.stl"/>
        </geometry>
        <material name="black">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://snp_blending/urdf/mh180_120/collision/link_t.stl"/>
        </geometry>
        <material name="black"/>
      </collision>
    </link>
    <link name="${prefix}tool0"/>
    <!-- end of link list -->
    <!-- joint list -->
    <joint name="${prefix}joint_1_s" type="revolute">
      <origin xyz="0 0 0.650" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link_s"/>
      <axis xyz="0 0 1"/>
      <limit lower="-${radians(180)}" upper="${radians(180)}" effort="0" velocity="${radians(125)}"/>
    </joint>
    <joint name="${prefix}joint_2_l" type="revolute">
      <origin xyz="0.325 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_s"/>
      <child link="${prefix}link_l"/>
      <axis xyz="0 1 0"/>
      <limit lower="-${radians(60)}" upper="${radians(76)}" effort="0" velocity="${radians(115)}"/>
    </joint>
    <joint name="${prefix}joint_3_u" type="revolute">
      <origin xyz="0 0 1.150" rpy="0 0 0"/>
      <parent link="${prefix}link_l"/>
      <child link="${prefix}link_u"/>
      <axis xyz="0 -1 0"/>
      <limit lower="-${radians(85)}" upper="${radians(90)}" effort="0" velocity="${radians(125)}"/>
    </joint>
    <joint name="${prefix}joint_4_r" type="revolute">
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <parent link="${prefix}link_u"/>
      <child link="${prefix}link_r"/>
      <axis xyz="-1 0 0"/>
      <limit lower="-${radians(360)}" upper="${radians(360)}" effort="0" velocity="${radians(182)}"/>
    </joint>
    <joint name="${prefix}joint_5_b" type="revolute">
      <origin xyz="1.590 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_r"/>
      <child link="${prefix}link_b"/>
      <axis xyz="0 -1 0"/>
      <limit lower="-${radians(130)}" upper="${radians(130)}" effort="0" velocity="${radians(175)}"/>
    </joint>
    <joint name="${prefix}joint_6_t" type="revolute">
      <origin xyz="0.225 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_b"/>
      <child link="${prefix}link_t"/>
      <axis xyz="-1 0 0"/>
      <limit lower="-${radians(360)}" upper="${radians(360)}" effort="0" velocity="${radians(265)}"/>
    </joint>
    <joint name="${prefix}joint_6_t-tool0" type="fixed">
      <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
      <parent link="${prefix}link_t"/>
      <child link="${prefix}tool0"/>
    </joint>
    <!-- end of joint list -->
    <!-- ROS base_link to Robot Manufacturer World Coordinates transform -->
    <link name="${prefix}base"/>
    <joint name="${prefix}base_link-base" type="fixed">
      <origin xyz="0 0 0.650" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}base"/>
    </joint>
  </xacro:macro>
</robot>
